<h1><%= @patient.name %></h1>

<h3> Appointments </h3>
<ul>
<% @patient.appointments.each do |app| %>
    <li><%= app.appointment_datetime.to_datetime.strftime('%B %d, %Y at %H:%M')%></li>
<% end %>
</ul>

<h3>Doctors</h3>
<ul>
<% @patient.doctors.each do |doctor|%>
    <li><%= link_to doctor.name, doctor %></li>
<% end %>
</ul>
