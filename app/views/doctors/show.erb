<h1> <%= @doctor.name %> </h1>
<h2> <%= @doctor.department %> </h2>

<h3>Patients</h3>
<ul>
    <% @doctor.patients.each do |patient| %>
        <li><%= link_to patient.name, patient %></li>
    <% end %>
</ul>

<h3> Appointments </h3>
<ul>
    <% @doctor.appointments.each do |app| %>
        <li><%= app.appointment_datetime.to_datetime.strftime('%B %d, %Y at %H:%M') %></li>
    <% end %>
</ul>

